<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articoli - API Mexal</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <script>
        // Función que filtra los artículos basados en el código ingresado en el campo de búsqueda
        function filterData() {
            var input = document.getElementById('searchInput').value.toLowerCase();
            var rows = document.getElementsByTagName('tr');

            for (var i = 1; i < rows.length; i++) {
                var cells = rows[i].getElementsByTagName('td');
                var codice = cells[0].textContent.toLowerCase();
                rows[i].style.display = codice.includes(input) ? "" : "none";
            }
        }
    </script>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body">
                        <h1 class="text-center text-secondary">Articoli</h1>

                        <!-- Campo de búsqueda -->
                        <div class="mb-3">
                            <input type="text" id="searchInput" onkeyup="filterData()" class="form-control" placeholder="Ricerca per codice...">
                        </div>

                        <!-- Tabla de datos -->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Codice</th>
                                        <th>Descrizione</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (DatiOutput && DatiOutput.articoli && DatiOutput.articoli.length > 0) { %>
                                        <% DatiOutput.articoli.forEach(function(articolo) { %>
                                            <tr>
                                                <td><%= articolo.codice %></td>
                                                <td><%= articolo.descrizione %></td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="2" class="text-center">Non trovato.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
